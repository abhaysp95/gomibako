{{template "base" .}}

{{define "title"}}Gomi #{{.Gomi.Id}}{{end}}

{{define "body"}}
	{{with .Gomi}}
		<div class="gomi">
			<div class="metadata">
				<strong id="title">{{.Title}}</strong>
				<span id="id">#{{.Id}}</span>
			</div>
			<pre id="content"> {{.Content}} </pre>
			<div class="metadata">
				<time id="created">{{.Created | humanizedDate}}</time>
				<time id="expires">{{.Expires | humanizedDate}}</time>
			</div>
		</div>
	{{end}}
{{end}}
